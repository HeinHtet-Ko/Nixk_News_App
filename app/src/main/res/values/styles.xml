<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_200</item>
        <item name="colorAccent">@color/purple_700</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.AppCompat.Title.Title" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.AppCompat.Title.SecondTitle" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.AppCompat.Title.ArticleTitle" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.AppCompat.Title.CategoriesTitle" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#625B5B</item>
    </style>

    <style name="TextAppearance.AppCompat.Title.CategoriesTitleSelected"
        parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextAppearance.AppCompat.Title.Category" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextAppearance.AppCompat.Time.ArticleTime" parent="">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#414141</item>
    </style>

    <style name="TextAppearance.AppCompat.Title.ArticleCategories" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextAppearance.AppCompat.Title.InnerCategory" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextAppearance.AppCompat.Title.InnerCategories" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Theme.AppCompat.Error" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#636161</item>
    </style>

    <style name="TextAppearance.AppCompat.Title.TitleCategories" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="ActiveBottomIndicatorText" parent="">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="InActiveBottomIndicatorText" parent="">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:colorActivatedHighlight">@color/black</item>
    </style>
</resources>